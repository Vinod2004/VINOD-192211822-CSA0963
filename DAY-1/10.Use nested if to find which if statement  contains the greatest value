public class GreatestOfThree {
    public static void main(String[] args) {
        int num1 = 15;
        int num2 = 42;
        int num3 = 27;
        int greatest;
        if (num1 >= num2) {
            if (num1 >= num3) {
                greatest = num1;
                System.out.println("The greatest number is: " + greatest + " (determined by num1 >= num2 and num1 >= num3)");
            } else {
                greatest = num3;
                System.out.println("The greatest number is: " + greatest + " (determined by num1 >= num2 and num3 > num1)");
            }
        } else {
            if (num2 >= num3) {
                greatest = num2;
                System.out.println("The greatest number is: " + greatest + " (determined by num2 > num1 and num2 >= num3)");
            } else {
                greatest = num3;
                System.out.println("The greatest number is: " + greatest + " (determined by num2 > num1 and num3 > num2)");
            }
        }
    }
}

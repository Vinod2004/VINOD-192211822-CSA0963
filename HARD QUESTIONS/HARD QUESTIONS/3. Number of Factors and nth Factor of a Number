public class FactorCalculator {
    public static void main(String[] args) {
        int number = 36; 
        int n = 3; 
        int count = 0;
        for (int i = 1; i <= number; i++) {
            if (number % i == 0) {
                count++;
                if (count == n) {
                    System.out.println("Number of factors: " + count);
                    System.out.println("The " + n + "th factor: " + i);
                    break;
                }
            }
        }
    }
}
